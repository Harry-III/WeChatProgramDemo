/* pages/book/bookDetail.wxss */

.bookDetail{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx,20rpx;
}

.imageStyle{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.imageStyle image {
  width: 100%;
  height: 400rpx;
}

.bookTitle text {
  display: flex;
  flex-direction: column; /* 竖排*/
  justify-content: center;
  align-items: center;
  padding: 10rpx 0rpx 10rpx 0rpx;
}

.bookAuthor text{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #f00;
}

.bookAuthorIntro {
  display: flex;
  flex-direction: column;
}

.intro {
  font-size: 24rpx;
  font-family: '黑体';
  margin-top: 20rpx;
  background: #eeeeee;
  padding: 5rpx 10rpx 5rpx 10rpx;
}

